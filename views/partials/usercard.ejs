<div class="column is-half">
        <div class="box" id="usercard">
           <article class="media">
              <div class="media-left">
                <img class="img-circle-users" src="https://cdn.discordapp.com/avatars/<%= users.id %>/<%= users.avatar %>.png" onerror="this.onerror=null;this.src='https://cdn.discordapp.com/embed/avatars/0.png';">
              </div>
              <div class="media-content">
                 <div class="content">
                    <p>
                       <strong><%= users.tag %> &nbsp;<% if (users.isBanned == true) { %><img id="banned" style="width: 30px; height: 30px;" src="/img/Banned.png" title="Banned User"> <% } %> <% if (users.isAdmin == true) { %><img id="webadmin" style="width: 30px; height: 30px;" src="/img/admin.png" title="Website Administrator"> <% } %> <% if (users.isMod == true|| users.isAdmin == true) { %><img id="webmod" style="width: 30px; height: 30px;" src="/img/staff.png" title="Website Moderator"> <% } %> <% if (users.isVerifiedDev == true) { %> <img id="vdev" style="width: 30px; height: 30px" src="/img/verified.png" title="Verified Developer"> <% } %></p></strong>
                    </p>
                 </div>
                 <nav class="level is-mobile">
                    <div class="field is-grouped is-grouped-multiline">
                       <p class="control">
                          <a class="button is-link" href="/user/<%= users.id %>">Profile</a>
                         <% if (users.isBanned == false) { %>
                          <a class="button is-danger" href="/staff/admin/<%= users.id %>/ban">Ban</a>
                         <% } else { %>
                          <a class="button is-success" href="/staff/admin/<%= users.id %>/ban">Unban</a>
                        <% } %>
                        <a class="button is-danger" href="/staff/admin/<%= users.id %>/delete">Delete</a>
                       </p>
                       <div class="select">
                                <select onChange="window.document.location.href=this.options[this.selectedIndex].value;">
                                  <option disabled selected>Assign or Remove Rank</option>
                                  <option value="/staff/admin/rank/<%= users.id %>/User">Reset Staff Ranks (User)</option>
                                  <option value="/staff/admin/rank/<%= users.id %>/Verified Dev">Verified Developer</option>
                                  <option value="/staff/admin/rank/<%= users.id %>/Mod">Website Moderator</option>
                                  <option value="/staff/admin/rank/<%= users.id %>/Admin">Website Administrator</option>
                                </select>
                          </div>
                    </div>
                 </nav>
              </div>
           </article>
        </div>
</div>
